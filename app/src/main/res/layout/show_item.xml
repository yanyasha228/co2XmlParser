<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showItemLayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/offerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/offerName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:maxLength="120"
            android:scrollHorizontally="false"
            android:text="offerName" />

        <TextView
            android:id="@+id/quantityStatic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Кол-во:"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/quantityCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="quan"
            android:textSize="18sp"
            android:textStyle="normal|bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/hbc"
            android:layout_width="21dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/circred" />

        <TextView
            android:id="@+id/cardVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="Vendor"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            />

        <ImageButton
            android:id="@+id/offerFavorite"
            android:layout_width="50dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/heart_like" />

        <TextView
            android:id="@+id/offerPriceStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена:"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/offerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offerPrice"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>


