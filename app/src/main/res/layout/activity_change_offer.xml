<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.test.testproj.FavoritesFragment">

<LinearLayout
    android:id="@+id/activity_change_offer_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/offersImage"
            android:layout_width="376dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Available: " />

        <CheckBox
            android:id="@+id/availableCheckBox"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Change Name:" />

        <EditText
            android:id="@+id/newName"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:text="New Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="53dp"
            android:text="Change quantity" />

        <EditText
            android:id="@+id/newQuantity"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="textPersonName"
            android:text="New Quantity" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="53dp"
            android:text="Change Vendor" />

        <EditText
            android:id="@+id/newVendor"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="textPersonName"
            android:text="New Vendor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="53dp"
            android:text="Change Offers Price" />

        <EditText
            android:id="@+id/newOffersPrice"
            android:layout_width="323dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="textPersonName"
            android:text="New Price" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="53dp"
            android:text="Change Description" />

        <EditText
            android:id="@+id/changeDescription"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom"
            android:text="New Description" />
    </LinearLayout>



</LinearLayout>

</ScrollView>

